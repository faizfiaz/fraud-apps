<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="value"
            type="String" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_edit_horizontal"
        app:cardCornerRadius="@dimen/radius_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDarkTrans"
            android:orientation="vertical"
            android:padding="@dimen/padding_xmsmall">

            <TextView
                style="@style/TextAppearance.Text.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@{title}"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_s" />

            <TextView
                style="@style/TextAppearance.Text.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@{value}"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_ms" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>